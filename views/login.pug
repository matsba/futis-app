extends layout

block content
    div(class='column col-12')
        h1 Kirjaudu sisään
    div(class='column')
        if loginErrorMsg
            span(class="toast toast-error")= loginErrorMsg 
        if regSuccesMsg
            span(class="toast toast-success")= regSuccesMsg 
        div(class='column col-8')
            div(class='form-group')
                form(action='/login', method='POST')
                    label.form-label Käyttäjätunnus
                    input(type='text', name='username' class="form-input")
                    label.form-label Salasana
                    input(type='password', name='password' class="form-input")
                    input(type='submit', value='Kirjaudu', class='btn btn-primary login-button')
    div.divider-vert
    div(class='column')
        h3 Tervetuloa sivulle
        p Tämä on leipätekstiä
    div(class='column col-12')
        a(class='btn btn-link', href="/register") Rekisteröidy
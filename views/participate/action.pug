extends ../layout

block scripts
    script(src="/public/scripts.js")

block content

    div.column.col-12
        h2= tournament.name
    div.column.col-12
        h3 Veikkaa
        form(action="#" method="POST" class="form-horizontal")
            table(class='table table-striped table-hover')
                thead
                    tr
                        th Aika
                        th Peli
                        th Veikkaus
                tbody
                    for game in tournament.games
                        tr
                            td= moment(game.game_start_datetime).format('D.M.YYYY[, klo] H:mm')
                            td
                                span
                                    img(src="/public/img/flags/" + (game.team_1_country_code || 'placeholder') + ".png" class="img-flag-tiny")
                                    =game.team_1 
                                span  -                           
                                    =game.team_2
                                    img(src="/public/img/flags/" + (game.team_2_country_code || 'placeholder') + ".png" class="img-flag-tiny")
                            td.form-group
                                input(type="radio" value="1" id="radio_" + game.id +"_1" name="radio_" + game.id)
                                label(for="radio_" + game.id +"_1") 1 
                                input(type="radio" value="x" id="radio_" + game.id +"_x" name="radio_" + game.id)
                                label(for="radio_" + game.id +"_x") x 
                                input(type="radio" value="2" id="radio_" + game.id +"_2" name="radio_" + game.id)
                                label(for="radio_" + game.id +"_2") 2
            h5.ptb-1-4 Täytä vielä nämä...
            div.form-group
                div.col-3
                    label.form-label Maalikuningas
                div.col-6
                    input(type="text" name="topstriker" class="form-input")
            div.form-group
                div.col-3
                    label.form-label Turnauksen voittaja
                div.col-6
                    input(type="text" name="firstplace" class="form-input")
            div.form-group
                div.col-3
                    label.form-label Turnauksen 2. sija
                div.col-6
                    input(type="text" name="secondplace" class="form-input")
            div.form-group.pt-20
                div.col-9
                div.col-1                    
                    a(class='btn btn-link' onclick="cancelButton(event)") Peruuta
                div.col-2
                    button(class='btn btn-primary' type='submit') Lähetä veikkaukset


extends ../layout

block content
    h1 Rekisteröidy
    if regErrorMsg
        span(class='toast toast-error')= regErrorMsg
    if errors
        dl
            for error in errors
                dd(class='text-error')= error.msg

    div(class='columns')
        div(class='column col-md-6 col-sm-12')
            div.form-group
                form(action='/user/register', method='POST')
                    label.form-label Käyttäjätunnus
                    input(type='text', name='username' class="form-input" required)
                    label.form-label Sähköposti
                    input(type='email', name='email' class="form-input" required)     
                    label.form-label Salasana
                    if pwdErrorMsg
                        span(class='label label-error')= pwdErrorMsg
                    input(type='password', name='password' class="form-input" required)
                    label.form-label Salasana uudestaan
                    input(type='password', name='password2' class="form-input" required)
                    input(type='submit', value='Rekisteröidy', class='btn btn-primary login-button')
        div.divider-vert(class='hide-sm')
        div(class='column col-md-5 col-sm-12')
            ul
                li Käyttäjätunnusta käytetään kirjautumiseen
                li Käyttäjätunnuksen tulee olla 3-20 merkkiä ja saa sisältää vain numeroita ja kirjaimia
                li Salasanan tulee olla 5-20 merkkiä pitkä ja saa sisältää vain numeroita ja kirjaimia
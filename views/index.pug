extends layout

block content    
    div.columns
        div(class='column col-12')
        if user.username == 'admin'
            a(href='/admin/admin' class='btn')= 'Admin työkalut'
    div.columns
        div(class='column col-12')
            span.text-gray Turnaus
            h1= tournament.name
        div(class='column col-6')
            span.text-gray Alkaa
            p.text-primary #{moment(tournament.dateStarts).format("D.MM.YYYY")}
        div(class='column col-6')
            span.text-gray Loppuu
            p.text-primary #{moment(tournament.dateEnds).format("D.MM.YYYY")}
    div.columns
        div(class='column col-6')
            h3 Päivän pelit
            table(class='table table-hover')
                thead
                    tr
                        th Klo
                        th Peli
                        th Tulos
                tbody
                for game in todays
                    tr
                        td= moment(game.game_start_datetime).format("H:mm")
                        td= game.game
                        td= game.score
        div(class='column col-6')
            h3 Huomisen pelit
            table(class='table table-hover')
                thead
                    tr
                        th Klo
                        th Peli
                tbody
                for game in tomorrows
                    tr
                        td= moment(game.game_start_datetime).format("H:mm")
                        td= game.game
    div.columns
        div(class='column col-6')
            h2 Omat tulokset
            table(class='table table-striped table-hover')
                thead
                    tr
                        th #
                        th Peli
                        th Oma
                        th Tulos
                tbody
                    tr
                        td
                        td Saksa - Sveitsi
                        td X
                        td X
                    tr
                        td
                        td Kiina - Pohjois-Korea
                        td 1
                        td X
        div(class='column col-6')
            h2 Leaderboard
            table(class='table table-striped table-hover')
                thead
                    tr
                        th Nimi
                        th Pisteet
                tbody
                    tr
                        td mikko
                        td 20
                    tr
                        td masa
                        td 19
    

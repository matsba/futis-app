extends layout

block content    
    div.columns
        div(class='column col-12')
        if user.username == 'admin'
            a(href='/admin/admin' class='btn')= 'Admin työkalut'
    div.columns
        div(class='column col-6')
            h3 Päivän pelit
            table(class='table table-hover')
                thead
                    tr
                        th Klo
                        th Peli
                        th Tulos
                tbody
                    tr
                        td 14:00
                        td Suomi - Islanti
                        td 1 - 0
                    tr
                        td 17:00
                        td Venäjä - Ukanda
                        td

        div(class='column col-6')
            h3 Huomisen pelit
            table(class='table table-hover')
                thead
                    tr
                        th Klo
                        th Peli
                tbody
                    tr
                        td 14:00
                        td Ruotsi - Islanti
                    tr
                        td 17:00
                        td Irlanti - Wales
    div.columns
        div(class='column col-6')
            h2 Omat tulokset
            table(class='table table-striped table-hover')
                thead
                    tr
                        th #
                        th Peli
                        th Oma
                        th Tulos
                tbody
                    tr
                        td
                        td Saksa - Sveitsi
                        td X
                        td X
                    tr
                        td
                        td Kiina - Pohjois-Korea
                        td 1
                        td X
        div(class='column col-6')
            h2 Leaderboard
            table(class='table table-striped table-hover')
                thead
                    tr
                        th Nimi
                        th Pisteet
                tbody
                    tr
                        td mikko
                        td 20
                    tr
                        td masa
                        td 19
    
